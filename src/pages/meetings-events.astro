<style>
  .me-heading {
    font-family: 'Playfair Display', serif;
    color: #000;
  }

  .me-intro {
    color: #666;
    font-size: 16px;
    line-height: 1.9;
  }

  /* Hero image */
  .me-hero-img {
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  /* Alternating detail blocks */
  .me-detail-img {
    background-size: cover;
    background-position: center;
    min-height: 480px;
    height: 100%;
  }

  .me-detail-text {
    padding: 4em 5em;
    max-width: 600px;
  }

  .me-detail-text h3 {
    font-family: 'Playfair Display', serif;
    font-size: 28px;
    font-weight: 700;
    color: #000;
    margin-bottom: 1em;
    position: relative;
    padding-bottom: 1em;
  }

  .me-detail-text h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 2px;
    background-color: #b69100;
  }

  .me-detail-text p {
    color: #666;
    font-size: 15px;
    line-height: 1.9;
    margin-bottom: 1.2em;
  }

  /* Conference Packages */
  .me-packages-section {
    background-color: #fff;
  }

  .me-package-card {
    padding: 3em 2em;
    border: 1px solid #eee;
    margin-bottom: 2em;
  }

  .me-package-icon {
    margin-bottom: 1.5em;
  }

  .me-package-icon span {
    font-size: 48px;
    color: #b69100;
  }

  .me-package-card h4 {
    font-family: 'Playfair Display', serif;
    font-size: 22px;
    color: #000;
    margin-bottom: 0.8em;
  }

  .me-package-card p {
    font-size: 15px;
    color: #666;
    line-height: 1.8;
  }

  .me-parking-note {
    font-size: 15px;
    color: #666;
    font-style: italic;
    line-height: 1.8;
  }

  @media (max-width: 767.98px) {
    .me-hero-img {
      height: 300px;
    }

    .me-detail-img {
      min-height: 300px;
    }

    .me-detail-text {
      padding: 3em 2em;
    }

    .me-detail-text h3 {
      font-size: 24px;
    }
  }
</style>
