---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Roxandrea" activePage="leisure-activities">
	<div class="hero-wrap" style="background-image: url('/images/landscape-2.jpg');">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
        <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
        	<div class="text">
            <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Home</a></span> <span>Leisure Activities</span></p>
            <h1 class="mb-4 bread">Leisure Activities</h1>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center mb-5 pb-3">
        <div class="col-md-7 heading-section text-center ftco-animate">
          <span class="subheading">Activities at Lusoi Gardens</span>
          <h2 class="mb-4">We've created a playground for all ages</h2>
          <p class="mt-4">Blending outdoor adventure, family fun, and moments of calm.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section bg-light">
    <div class="container">
      <div class="row justify-content-center mb-5 pb-3">
        <div class="col-md-7 heading-section text-center ftco-animate">
          <h2 class="mb-4">For Families & Kids</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Trampoline Zone</h3>
              <p>Bounce and laugh under the open sky.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Bouncing Castle</h3>
              <p>Safe, colorful fun that keeps the kids busy while parents relax.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Picnic & Snack Corner</h3>
              <p>Fresh local treats, soft drinks, and ice cream available on-site.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center mb-5 pb-3">
        <div class="col-md-7 heading-section text-center ftco-animate">
          <h2 class="mb-4">For Adventurers</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Mountain Bike Trails</h3>
              <p>Ride through scenic routes surrounded by lush vegetation and gentle slopes.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Nature Walks</h3>
              <p>Explore our gardens and nearby countryside paths with guided walks.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Photography Spots</h3>
              <p>Capture amazing landscapes, birdlife, and unforgettable sunsets.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section bg-light">
    <div class="container">
      <div class="row justify-content-center mb-5 pb-3">
        <div class="col-md-7 heading-section text-center ftco-animate">
          <h2 class="mb-4">For Relaxation Seekers</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Garden Lounges</h3>
              <p>Shaded sitting areas for reading, chatting, or meditating.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Outdoor Caf√©</h3>
              <p>Enjoy coffee or a meal while soaking in panoramic views.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 d-flex ftco-animate">
          <div class="blog-entry align-self-stretch">
            <div class="text p-4">
              <h3 class="heading mb-3">Evening Bonfire</h3>
              <p>Perfect for group events, team-building, or cozy nights under the stars. Available on request.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

